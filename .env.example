# ========================================
# CyberX Backend API Environment Variables
# ========================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# ========================================
# Server Configuration
# ========================================
# Port number for the Express server
PORT=3000

# Application environment (development, production, test)
NODE_ENV=development

# Service name for logging and identification
SERVICE_NAME=cyberx-api

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
# Database host address
DB_HOST=localhost

# Database port number
DB_PORT=5432

# Database name
DB_NAME=CyberEx

# Database username
DB_USER=cyberex

# Database password (REQUIRED - change this!)
DB_PASSWORD=your-secure-password-here

# ========================================
# JWT Configuration
# ========================================
# JWT secret key for token signing (REQUIRED - change this!)
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-here

# ========================================
# Logging Configuration
# ========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# Security Configuration
# ========================================
# CORS origin (comma-separated for multiple origins)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate limiting configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=500

# ========================================
# Development/Testing Configuration
# ========================================
# Enable detailed error messages in development
# DEBUG=true

# Swagger UI configuration
# SWAGGER_ENABLED=true

# Swagger-specific JWT secret (REQUIRED - change this!)
# Separate secret for swagger authentication
JWT_SWAGGER_SECRET=your-super-secret-swagger-jwt-key-here

# Swagger access secret (REQUIRED - change this!)
# Secret key to access swagger token generation endpoint
SWAGGER_SECRET=your-swagger-access-secret-here

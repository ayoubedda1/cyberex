{
  "name": "cyberx-backend",
  "version": "1.0.0",
  "description": "Secure Express API backend for CyberX",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:coverage:open": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:unit": "jest tests/unit.test.js",
    "test:security": "jest tests/security.test.js",
    "test:security:coverage": "jest tests/security.test.js --coverage",
    "test:unit:coverage": "jest tests/unit.test.js --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "sequelize": "^6.35.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "sqlite3": "^5.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!seed.js",
      "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 10000
  },
  "keywords": [
    "cyberx",
    "backend",
    "api",
    "express",
    "postgresql",
    "jwt",
    "security",
    "sequelize"
  ],
  "author": "CyberX Team",
  "license": "MIT"
}
